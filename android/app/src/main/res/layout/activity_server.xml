<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServerActivity">

    <TextView
        android:id="@+id/bluetoothAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:textColor="@color/disconnected"
        app:layout_constraintBaseline_toBaselineOf="@id/networkAddress"
        app:layout_constraintEnd_toStartOf="@id/networkAddress"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/networkAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:textColor="@color/disconnected"
        app:layout_constraintBaseline_toBaselineOf="@id/bluetoothAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bluetoothAddress" />

    <Button
        android:id="@+id/server"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/startServer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/networkAddress" />

    <EditText
        android:id="@+id/command"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="text"
        android:layout_marginEnd="8dp"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toStartOf="@+id/send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/server" />

    <Button
        android:id="@+id/send"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/command"
        app:layout_constraintTop_toTopOf="@id/command" />

    <TextView
        android:id="@+id/response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/send" />

</androidx.constraintlayout.widget.ConstraintLayout>